<div class="container">

  <section>

    <article class="user">

      <img src="http://www.gravatar.com/avatar/205e460b479e2e5b48aec07710c08d50?f=y" alt="Ben Kenobi, of course">
      <h1><%= @user.full_name %></h1>
      <%= if @current_user && @current_user.id == @user.id do %>
        <ul class="author_actions">
          <li><a href="/user/<%= @user.id %>/edit" class="button edit">Edit Profile</a></li>
        </ul>
      <%= end %>
    </article>

  </section>

</div>
